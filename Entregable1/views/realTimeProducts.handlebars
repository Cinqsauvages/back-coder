<main class="timeMain">



    <div id='container'>
        <h2>Lista de Productos</h2>
        <div id='listOfProducts'>

        </div>
    </div>
    <div class="partTimerRight">
        <div>
            <h2>Modificar Prod</h2>
            <form class="updateProd">
                <label for="key">Atributo</label>
                <input type="text" id="key">
                <label for="valor">Cambio</label>
                <input type="text" id="value">
                <label for="idProduct">Id del producto</label>
                <input type="number" id="idProduct">
                <button type="submit" id="btn">Cambiar</button>
            </form>
        </div>
        <div >
            <h2>Agregar Prod</h2>
            <form class="addProd">
                <label for="title">Title</label>
                <input type="text" id="title">
                <label for="description">Descripcion</label>
                <input type="text" id="description">
                <label for="code">Code</label>
                <input type="text" id="code">
                <label for="price">Price</label>
                <input type="number" id="price">
                <label for="stock">Stock</label>
                <input type="number" id="stock">
                <label for="category">Categoria</label>
                <input type="text" id="category">
                <label for="status">status</label>
                <input type="text" id="status" placeholder="True o False">
                <button type="submit" id="btnAdd">Agregar</button>
            </form>
        </div>
        <div class="deletProd">
            <h2>Elminar producto, pon el id</h2>
            <label for="idDelet">Id del prod.</label>
            <input type="number" id="idDelet">
            <button id='eliminar'>Eliminar</button>
        </div>
    </div>
</main>


